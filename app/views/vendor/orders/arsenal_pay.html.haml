!!!
%html{:lang => "ru"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %script#arsenalpay-widget-script{:src => "https://arsenalpay.ru/widget/script.js", :type => "text/javascript"}
      :cdata
  %body
    #app-widget
    :javascript
      var APWidget = new ArsenalpayWidget ({
                    element: 'app-widget',
                    widget: #{arsenal_pay_params.widget.to_json.html_safe},
                    destination: #{arsenal_pay_params.destination.to_json.html_safe},
                    amount: #{arsenal_pay_params.amount.to_json.html_safe},
                });

      APWidget.render();
